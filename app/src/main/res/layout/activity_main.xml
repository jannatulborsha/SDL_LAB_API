<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="362dp"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:text="TextView" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:onClick="clear"
        android:text="CLEAR" />

    <Button
        android:id="@+id/divide"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/equal"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:text="/" />

    <Button
        android:id="@+id/equal"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/point"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/multiply"
        android:onClick="result"
        android:text="=" />

    <Button
        android:id="@+id/point"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/eight"
        android:layout_alignTop="@+id/zero"
        android:onClick="onClick"
        android:text="." />

    <Button
        android:id="@+id/zero"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="98dp"
        android:onClick="onClick"
        android:text="0" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="165dp"
        android:onClick="onClick"
        android:text="*" />

    <Button
        android:id="@+id/nine"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/six"
        android:layout_alignTop="@+id/eight"
        android:onClick="onClick"
        android:text="9" />

    <Button
        android:id="@+id/eight"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/five"
        android:layout_alignTop="@+id/seven"
        android:onClick="onClick"
        android:text="8" />

    <Button
        android:id="@+id/seven"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/four"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="165dp"
        android:onClick="onClick"
        android:text="7" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/four"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:text="-" />

    <Button
        android:id="@+id/add"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/three"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:text="+" />

    <Button
        android:id="@+id/six"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/three"
        android:layout_alignTop="@+id/five"
        android:onClick="onClick"
        android:text="6" />

    <Button
        android:id="@+id/five"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/two"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:text="5" />

    <Button
        android:id="@+id/four"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="230dp"
        android:onClick="onClick"
        android:text="4" />

    <Button
        android:id="@+id/three"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/two"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="91dp"
        android:onClick="onClick"
        android:text="3" />

    <Button
        android:id="@+id/two"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="170dp"
        android:onClick="onClick"
        android:text="2" />

    <Button
        android:id="@+id/one"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="168dp"
        android:onClick="onClick"
        android:text="1" />
</RelativeLayout>